{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "node", // Ensure module resolution is set to node
    "strictPropertyInitialization": false
  },
  "include": ["public/**/*.ts", "src/**/*.ts", "legacy/src/scenes/base-scene.ts", "legacy/src/scenes/battle-scene.ts", "legacy/src/scenes/preload-scene.ts", "legacy/src/scenes/scene-keys.ts"],
  "exclude": ["node_modules", "legacy"]
}
