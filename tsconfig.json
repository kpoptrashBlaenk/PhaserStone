{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "lib": ["es6"], // Specifies library files to include during compilation
    "strict": true, // Enables all strict type-checking options
    "strictPropertyInitialization": false, // No need to initialize variable in constructor
    "esModuleInterop": true, // Ensures compatibility with CommonJS modules
    "outDir": "./dist", // Output directory for compiled files
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "server.ts"],
  "exclude": ["node_modules", "Legacy"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
